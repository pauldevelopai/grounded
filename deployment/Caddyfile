# Caddyfile for ToolkitRAG Production Deployment
# Replace 'yourdomain.com' with your actual domain

# Main site with automatic HTTPS
yourdomain.com {
    # Automatic HTTPS via Let's Encrypt (no configuration needed!)

    # Logging
    log {
        output file /var/log/caddy/toolkitrag-access.log
        format json
    }

    # Security headers
    header {
        # HSTS (force HTTPS for 1 year)
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"

        # Prevent MIME sniffing
        X-Content-Type-Options "nosniff"

        # XSS protection
        X-XSS-Protection "1; mode=block"

        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"

        # Content Security Policy (adjust as needed)
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com; style-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com; img-src 'self' data:; font-src 'self' data:;"

        # Remove server header
        -Server
    }

    # Rate limiting (optional, additional layer)
    # rate_limit {
    #     zone dynamic {
    #         key {remote_host}
    #         events 100
    #         window 1m
    #     }
    # }

    # Reverse proxy to FastAPI application
    reverse_proxy localhost:8000 {
        # Timeouts
        transport http {
            dial_timeout 5s
            response_header_timeout 60s
            read_timeout 60s
            write_timeout 60s
        }

        # Health check
        health_uri /health
        health_interval 30s
        health_timeout 5s

        # Headers
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
    }

    # File upload size limit (50MB)
    request_body {
        max_size 50MB
    }

    # Custom error pages (optional)
    handle_errors {
        @502-504 expression `{err.status_code} >= 502 && {err.status_code} <= 504`
        handle @502-504 {
            respond "Service temporarily unavailable. Please try again later." 503
        }
    }
}

# HTTP to HTTPS redirect (automatic with Caddy, but explicit for clarity)
http://yourdomain.com {
    redir https://yourdomain.com{uri} permanent
}

# Optional: www redirect
www.yourdomain.com {
    redir https://yourdomain.com{uri} permanent
}
